<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorPrimaryDark">@color/accent_blue</item>
        <item name="colorAccent">@color/accent_blue</item>
        <item name="colorControlNormal">@color/accent_blue</item>
    </style>

    <style name="Theme.MyCompatTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorPrimaryDark">@color/accent_blue</item>
        <item name="colorAccent">@color/accent_blue</item>
        <item name="colorControlNormal">@color/accent_blue</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/off_white</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="actionBarStyle">@style/ActionBar</item>


    </style>

    <style name="ActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/off_white</item>
        <item name="background">@color/off_white</item>
    </style>

</resources>
