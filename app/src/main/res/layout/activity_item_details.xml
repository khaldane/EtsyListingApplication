<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.khaldane.masterdetailapp.ItemDetails"
    android:background="@color/bg_white"
    android:orientation="vertical"
    android:weightSum="3">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="@drawable/shop_item">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/black_gradient"/>

        <!--<ImageView-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="25dp"-->
            <!--android:background="@drawable/back_arrow_white"-->
            <!--android:layout_marginLeft="20dp"-->
            <!--android:layout_marginStart="20dp"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:contentDescription="@string/return_arrow"/>-->

    </RelativeLayout>

    <!-- About Body -->
    <android.support.v7.widget.CardView
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="@color/off_white"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-25dp"
        android:layout_weight="1.9"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="15dp">

            <TextView
                android:id="@+id/tvItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_title"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/text_primary_gray"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_price"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/text_primary_gray"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <!-- Search by step-->
            <LinearLayout
                android:id="@+id/llTutorialSteps"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:baselineAligned="false"
                android:layout_below="@+id/tvItemTitle">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/overview"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:textSize="12sp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_gray"
                        android:layout_below="@+id/tvAll"
                        android:layout_marginTop="5dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/accent_blue"
                        android:layout_below="@+id/tvAll"
                        android:layout_marginTop="5dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvItemDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/item_description"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/text_primary_gray"
                        android:textSize="12sp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_gray"
                        android:layout_below="@+id/tvItemDescription"
                        android:layout_marginTop="5dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/accent_blue"
                        android:layout_below="@+id/tvItemDescription"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"/>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlOverview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llTutorialSteps"
                android:layout_marginTop="10dp">

                <!-- Content goes here -->

            </RelativeLayout>

            <TextView
                android:id="@+id/tvItemDescriptionContent"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/item_description"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:layout_below="@+id/llTutorialSteps"
                android:textColor="@color/text_primary_gray"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>